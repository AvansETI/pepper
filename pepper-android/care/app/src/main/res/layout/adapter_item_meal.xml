<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="meal"
            type="com.pepper.care.common.entities.PlatformMealsResponse" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="8dp"
        android:layout_width="300dp"
        android:layout_height="230dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/clickable_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp"
            android:clickable="true"
            android:clipToPadding="true"
            android:focusable="true"
            android:minHeight="200dp"
            app:cardElevation="8dp"
            app:cardForegroundColor="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/meal_img_src"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/meal_placeholder"
                    app:imageSource="@{meal.source}"
                    app:layout_constraintBottom_toTopOf="@+id/guideline6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/meal_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="8dp"
                    android:text="Maaltijd titel"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/meal_img_src"
                    tools:text="@{meal.name}" />

                <!--                <TextView-->
                <!--                    android:id="@+id/meal_description"-->
                <!--                    android:layout_width="0dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginTop="8dp"-->
                <!--                    android:fontFamily="@font/montserrat_regular"-->
                <!--                    android:includeFontPadding="false"-->
                <!--                    android:paddingHorizontal="8dp"-->
                <!--                    android:textSize="10sp"-->
                <!--                    android:text="Beschrijving van de maaltijd."-->
                <!--                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintTop_toBottomOf="@+id/meal_title"-->
                <!--                    tools:text="@{meal.description}" />-->

                <Button
                    android:id="@+id/more_info"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_regular"
                    android:letterSpacing="0"
                    android:paddingHorizontal="12dp"
                    android:stateListAnimator="@null"
                    android:text="Meer informatie"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"
                    android:background="@color/transparent"
                    app:cornerRadius="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/meal_title" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="120dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>