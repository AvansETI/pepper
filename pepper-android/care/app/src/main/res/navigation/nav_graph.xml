<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pepper.care.home.presenstation.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.pepper.care.order.presentation.OrderFragment"
        android:label="OrderFragment" >
        <action
            android:id="@+id/action_orderFragment_to_orderViewMealFragment"
            app:destination="@id/orderViewMealFragment"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@anim/slide_up"
            app:popEnterAnim="@anim/fade_out"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_orderFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderViewMealFragment"
        android:name="com.pepper.care.order.events.viewmeal.presentation.OrderViewMealFragment"
        android:label="OrderViewMealFragment" >
        <action
            android:id="@+id/action_orderViewMealFragment_to_orderFragment"
            app:destination="@id/orderFragment"
            app:enterAnim="@anim/slide_left_full"
            app:exitAnim="@anim/slide_left_bit"
            app:popEnterAnim="@anim/slide_right_bit"
            app:popExitAnim="@anim/slide_right_full" />
    </fragment>
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.pepper.care.feedback.presentation.FeedbackFragment"
        android:label="FeedbackFragment" >
        <action
            android:id="@+id/action_feedbackFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/dialogFragment"
        android:name="com.pepper.care.dialog.presentation.DialogFragment"
        android:label="DialogFragment" >
        <action
            android:id="@+id/action_dialogFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment" />
        <action
            android:id="@+id/action_dialogFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_dialogFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>