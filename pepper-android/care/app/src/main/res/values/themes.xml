<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application DAY theme. -->
    <style name="Theme_Care" parent="Theme.MaterialComponents.NoActionBar">>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme_Splash_Screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:navigationBarColor">@color/blackAlternative</item>
    </style>


    <style name="Pepper_Care_Title_Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/bodyTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Pepper_Care_Title_Text_Green" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Pepper_Care_Title_Text_Order" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Pepper_Care_Body_Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/bodyTextColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Pepper_Care_Body_Text_Order" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/bodyTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Pepper_Care_Label_text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/whiteAlternative</item>
        <item name="android:textSize">15sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Pepper_Care_Icon_Image" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_meal</item>
    </style>

    <style name="Pepper_Care_Image" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@color/colorAccent</item>
    </style>

    <style name="Pepper_Care_Image_Filter" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@color/transparentImageFilter</item>
    </style>

    <style name="Pepper_Care_Favorite_Filter" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@color/favoriteFilter</item>
    </style>

    <style name="Pepper_Care_Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="background">@color/ButtonBackgroundColor</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">30dp</item>
        <item name="backgroundTint">@color/ButtonBackgroundColor</item>
        <item name="strokeColor">@color/ButtonStrokeColor</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/ButtonIconTintColor</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">16dp</item>
        <item name="icon">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingLeft">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_padding_right</item>
    </style>

    <style name="Pepper_Care_Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@color/toolBarColor</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Pepper_Care_Material_Card" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="minHeight">200dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Pepper_Care_Indicator_Container" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/appintro_indicator_margin</item>
    </style>

    <style name="Pepper_Care_Circular_Progress_Indicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="trackColor">@color/transparentNotSelected</item>
        <item name="indicatorColor">@color/colorAccent</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Pepper_Care_Circular_Recycler_View" parent="">
        <item name="android:paddingTop">16dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Pepper_Care_Toolbar_Button" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:src">@drawable/ic_baseline_chevron_left_24</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
    </style>

    <style name="Pepper_Care_Card_Slider" parent="">
        <item name="activeCardLeftOffset">16dp</item>
        <item name="cardWidth">@dimen/card_width</item>
        <item name="cardsGap">@dimen/card_gap</item>
    </style>
</resources>