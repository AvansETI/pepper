<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Care" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/default_background_color</item>
        <item name="textAppearanceButton">@style/TextAppearance.Pepper.Care.Button</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Pepper.Care.MaterialAlertDialog</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/default_dark_background_color</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:navigationBarColor">@color/default_dark_background_color</item>
    </style>

    <style name="AppThemeMain" parent="Theme.Care" />

    <style name="ThemeOverlay.Pepper.Care.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Pepper.Care.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Pepper.Care.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Pepper.Care.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.Pepper.Care.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Pepper.Care.Button.Dialog</item>
    </style>

    <style name="MaterialAlertDialog.Pepper.Care.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialAlertDialog.Pepper.Care.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Widget.Pepper.Care.Button.Dialog" parent="Widget.Pepper.Care.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Pepper.Care.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Pepper.Care.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Pepper.Care.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@color/default_background_color</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <style name="AppIntroIndicatorContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/appintro_indicator_margin</item>
    </style>

    <style name="AppIntroStyle" parent="Theme.AppCompat.DayNight.NoActionBar"/>
</resources>